{
  "rules": {
    "tcp": {
      "search": {
        ".write": true,
        ".read": true
      },
      "tag": {
        ".read": true,
        ".write": "auth !== null && auth.uid !== null"
      },
      "company": {
        ".read": true,
        ".write": "auth !== null && auth.uid !== null",
        ".indexOn": "guid"
      },
      "user": {
        ".read": true,
        "$uid": {
          ".write": "auth !== null && auth.uid === $uid",
          ".read": true
        }
      },
      "oAuthLogin": {
        "$uid": {
          ".read": "auth.uid == $uid",
          ".write": "auth.uid == $uid"
        }
      },
      "oAuthAccessToken": {
        "$uid": {
          ".read": "auth.uid == $uid",
          ".write": "auth.uid == $uid"
        }
      },
      "oAuthQueue": {
        "$ticket": {
          ".write": "(newData.child('uid').val() == auth.uid && !data.child('uid').exists()) || !newData.exists()",
          ".read": "data.child('uid').val() == auth.uid",
          ".validate": "newData.hasChildren(['uid', 'resource'])"
        }
      }
    }
  }
}
